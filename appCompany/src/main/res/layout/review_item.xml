<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dish_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <!--<de.hdodenhof.circleimageview.CircleImageView-->
    <!--android:id="@+id/customerPhoto"-->
    <!--android:layout_width="50dp"-->
    <!--android:layout_height="50dp"-->
    <!--android:src="@mipmap/ic_launcher"-->
    <!--app:civ_border_width="1dp" />-->

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--android:layout_marginStart="10dp"-->

        <!--android:layout_toEndOf="@id/customerPhoto"-->
        <TextView
            android:id="@+id/customerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mario de Mario"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/foodRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customerName"
            android:layout_marginTop="3dp"
            android:text="Food Rating"
            android:textColor="#000"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/foodRatingStar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerName"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/colorAccent"
            android:isIndicator="true"
            android:numStars="3" />

        <TextView
            android:id="@+id/restaurantRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/foodRating"
            android:text="Restaurant Rating"
            android:textColor="#000"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/restaurantRatingStars"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/foodRatingStar"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:backgroundTint="@color/colorAccent"
            android:isIndicator="true"
            android:numStars="5" />
    </RelativeLayout>


    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeLayout"
        android:layout_marginTop="8dp"
        android:text="Ingredienti: fwoihiwndsuciewhbcuowbcowucbewuo"
        android:textColor="#777"
        android:textSize="13sp"
        android:textStyle="italic" />

    <View
        android:id="@+id/view_separator"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_below="@+id/comment"
        android:layout_centerInParent="true"
        android:layout_marginTop="18dp"
        android:background="@color/colorPrimary" />
</RelativeLayout>


