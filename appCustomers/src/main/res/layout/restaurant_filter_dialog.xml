<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/food_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showFoodCategorySelector"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/food_category_clickable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:text="Food category"
            android:textColor="#3d3d3d"
            android:textSize="16sp"
            android:textStyle="bold"
            android:drawableTint="@color/colorPrimary"/>

        <ImageView
            android:id="@+id/arrowbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:drawablePadding="8dp"
            android:src="@drawable/ic_sort_down"
            android:tint="@color/colorPrimary"
            android:layout_gravity="center"/>
    </LinearLayout>

    <com.github.aakira.expandablelayout.ExpandableRelativeLayout
        android:id="@+id/hiddenFoodCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/food_category_layout"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:ael_duration="200"
        app:ael_expanded="false"
        app:ael_interpolator="accelerate"
        app:ael_orientation="vertical"
        android:layout_marginTop="8dp">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RadioButton android:id="@+id/radio_pirates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All"
            android:onClick="onRadioButtonClicked"/>

        </RadioGroup>

    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

    <CheckBox
        android:id="@+id/freeDeliveryCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Free delivery"
        android:layout_below="@id/hiddenFoodCategories"
        android:layout_marginTop="8dp"/>



</RelativeLayout>