<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp"
    >


    <RelativeLayout
        android:id="@+id/dish_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dish_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/dish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/dish_photo"
            android:text="Nome piatto"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_marginStart="6dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dish_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dish_name"
            android:layout_toEndOf="@+id/dish_photo"
            android:layout_marginTop="3dp"
            android:layout_marginStart="6dp"
            android:text="Habanero"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/dish_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/dish_restaurant"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="6dp"
            android:text="5 â‚¬"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dish_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dish_restaurant"
            android:layout_marginTop="8dp"
            android:text="Ingredienti: fwoihiwndsuciewhbcuowbcowucbewuo"
            android:textColor="#777"
            android:textSize="13sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
